generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Inventory {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model Product {
  id          String    @id @default(cuid())
  productName String    @unique
  image       String?
  quantity    Int
  price       Float
  description String?
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId String

  @@index([inventoryId], name: "inventoryId")
}
